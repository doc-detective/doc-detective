{
  "tests": [
    {
      "testId": "goto-waitUntil-defaults",
      "description": "Test goTo with default waitUntil behavior (no waitUntil config specified)",
      "steps": [
        {
          "goTo": "http://localhost:8092/waitUntil-test-static.html"
        }
      ]
    },
    {
      "testId": "goto-waitUntil-network-idle",
      "description": "Test goTo with network activity detection",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/waitUntil-test-network.html",
            "waitUntil": {
              "networkIdleTime": 500
            }
          }
        }
      ]
    },
    {
      "testId": "goto-waitUntil-dom-mutations",
      "description": "Test goTo with DOM mutation detection",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/waitUntil-test-dom-mutations.html",
            "waitUntil": {
              "domIdleTime": 1000
            }
          }
        }
      ]
    },
    {
      "testId": "goto-waitUntil-find-selector",
      "description": "Test goTo with element finding by selector",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/waitUntil-test-late-element.html",
            "waitUntil": {
              "find": {
                "selector": "[data-testid='dashboard-loaded']"
              }
            }
          }
        }
      ]
    },
    {
      "testId": "goto-waitUntil-find-text",
      "description": "Test goTo with element finding by text",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/waitUntil-test-late-element.html",
            "waitUntil": {
              "find": {
                "elementText": "System operational"
              }
            }
          }
        }
      ]
    },
    {
      "testId": "goto-waitUntil-find-selector-and-text",
      "description": "Test goTo with element finding by both selector and text",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/waitUntil-test-late-element.html",
            "waitUntil": {
              "find": {
                "selector": ".dashboard-loaded",
                "elementText": "Dashboard"
              }
            }
          }
        }
      ]
    },
    {
      "testId": "goto-waitUntil-all-conditions",
      "description": "Test goTo with all waitUntil conditions enabled",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/waitUntil-test-late-element.html",
            "timeout": 10000,
            "waitUntil": {
              "networkIdleTime": 500,
              "domIdleTime": 1000,
              "find": {
                "selector": ".status",
                "elementText": "/.*operational.*/"
              }
            }
          }
        }
      ]
    },
    {
      "testId": "goto-waitUntil-simple-string-format",
      "description": "Test goTo with simple string format still works",
      "steps": [
        {
          "goTo": "http://localhost:8092/waitUntil-test-static.html"
        }
      ]
    }
  ]
}
