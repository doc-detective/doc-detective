{
  "name": "doc-detective",
  "version": "2.18.1",
  "description": "Treat doc content as testable assertions to validate doc accuracy and product UX.",
  "bin": {
    "doc-detective": "src/index.js"
  },
  "main": "./src/index.js",
  "scripts": {
    "mocha": "mocha",
    "test": "mocha test/*.test.js src/**/*.test.js",
    "prerunTests": "node ./src/checkDependencies.js",
    "runTests": "node ./src/index.js runTests",
    "prerunCoverage": "node ./src/checkDependencies.js",
    "runCoverage": "node ./src/index.js runCoverage",
    "dev": "node ./dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hawkeyexl/doc-detective.git"
  },
  "keywords": [
    "documentation",
    "unit",
    "test",
    "doc",
    "docs"
  ],
  "author": "Manny Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doc-detective/doc-detective/issues"
  },
  "homepage": "https://github.com/doc-detective/doc-detective#readme",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "doc-detective-common": "^1.21.0",
    "doc-detective-core": "^2.18.1",
    "inquirer": "^12.0.1",
    "prompt-sync": "^4.2.0",
    "semver": "^7.6.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "chai": "^5.1.2",
    "mocha": "^10.7.3",
    "proxyquire": "^2.1.3",
    "sinon": "^19.0.2"
  }
}
