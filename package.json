{
  "name": "doc-detective",
  "version": "2.1.0-alpha.1",
  "description": "Unit test documentation (and record videos of those tests).",
  "scripts": {
    "mocha": "mocha",
    "preinstall": "node scripts/syncVersion.js",
    "i:all": "npm run install:all",
    "install:all": "cd frontend && npm i && cd ../electron && npm i && cd ../server && npm i && cd .. && npm i",
    "postinstall": "cd frontend && npm ci && cd ../electron && npm ci && cd ../server && npm ci",
    "runTests": "node ./src/runTests.js",
    "runCoverage": "node ./src/runCoverage.js",
    "suggestTests": "node ./src/suggestTests.js",
    "start": "npm run frontend:start",
    "docker:build": "docker build -t hawkeyexl/doc-detective:dev .",
    "docker:push": "docker push hawkeyexl/doc-detective:dev",
    "docker:run": "docker run -it hawkeyexl/doc-detective:dev -p 3001:3001",
    "frontend:install": "cd frontend && npm i",
    "frontend:start": "cd frontend && npm run start",
    "frontend:watch": "cd frontend && npm run watch",
    "server:install": "cd server && npm i",
    "server:start": "cd server && npm run start",
    "electron:install": "cd electron && npm i",
    "electron:start": "cd electron && npm run start",
    "electron:build": "cd electron && npm run build",
    "reset": "node ./scripts/reset.js && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hawkeyexl/doc-detective.git"
  },
  "keywords": [
    "documentation",
    "unit",
    "test",
    "doc",
    "docs"
  ],
  "author": "Manny Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doc-detective/doc-detective/issues"
  },
  "homepage": "https://github.com/doc-detective/doc-detective#readme",
  "dependencies": {
    "doc-detective-common": "^1.2.11",
    "doc-detective-core": "^2.0.2",
    "prompt-sync": "^4.2.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0"
  }
}
