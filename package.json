{
  "name": "doc-detective",
  "version": "2.1.0",
  "description": "Unit test documentation (and record videos of those tests).",
  "scripts": {
    "mocha": "mocha",
    "test": "mocha test/*.test.js",
    "runTests": "node ./src/runTests.js",
    "runCoverage": "node ./src/runCoverage.js",
    "suggestTests": "node ./src/suggestTests.js",
    "docker:setup": "docker buildx install && docker buildx create --use",
    "docker:build": "docker buildx build --load -t hawkeyexl/doc-detective:dev . ",
    "docker:build:multiarch": "docker buildx build --platform linux/amd64,linux/arm64 -t hawkeyexl/doc-detective:dev .",
    "docker:push": "docker push hawkeyexl/doc-detective:dev",
    "docker:run": "docker run -it -p 3001:3001 hawkeyexl/doc-detective:dev",
    "dev": "node ./dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hawkeyexl/doc-detective.git"
  },
  "keywords": [
    "documentation",
    "unit",
    "test",
    "doc",
    "docs"
  ],
  "author": "Manny Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doc-detective/doc-detective/issues"
  },
  "homepage": "https://github.com/doc-detective/doc-detective#readme",
  "dependencies": {
    "doc-detective-common": "^1.5.0",
    "doc-detective-core": "^2.2.0",
    "prompt-sync": "^4.2.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "mocha": "^10.2.0"
  }
}
