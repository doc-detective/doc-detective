{
  "name": "doc-detective",
  "version": "4.0.0-beta.0",
  "description": "Treat doc content as testable assertions to validate doc accuracy and product UX.",
  "bin": {
    "doc-detective": "bin/doc-detective.js"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./cli": "./bin/doc-detective.js"
  },
  "scripts": {
    "postinstall": "node --disable-warning=DEP0190 scripts/postinstall.js",
    "compile": "tsc && node scripts/createCjsWrapper.js",
    "build": "npm run compile",
    "mocha": "mocha",
    "test": "mocha test/*.test.js",
    "prerunTests": "node ./dist/checkDependencies.js",
    "runTests": "node ./bin/doc-detective.js runTests",
    "start": "node ./bin/doc-detective.js",
    "dev": "node ./dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hawkeyexl/doc-detective.git"
  },
  "keywords": [
    "documentation",
    "unit",
    "test",
    "doc",
    "docs"
  ],
  "author": "Manny Silva",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/doc-detective/doc-detective/issues"
  },
  "homepage": "https://github.com/doc-detective/doc-detective#readme",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.2.2",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@puppeteer/browsers": "^2.12.0",
    "ajv": "^8.17.1",
    "appium": "^3.2.0",
    "appium-chromium-driver": "^2.1.5",
    "appium-geckodriver": "^2.1.11",
    "appium-safari-driver": "^4.1.8",
    "axios": "^1.13.5",
    "doc-detective-common": "^4.0.0-beta.0",
    "dotenv": "^17.2.4",
    "geckodriver": "^6.1.0",
    "jq-web": "^0.6.2",
    "json-schema-faker": "^0.5.9",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "posthog-node": "^5.24.15",
    "tree-kill": "^1.2.2",
    "webdriverio": "^9.24.0",
    "yaml": "^2.8.2",
    "yargs": "^17.7.2"
  },
  "optionalDependencies": {
    "@ffmpeg-installer/darwin-arm64": "4.1.5",
    "@ffmpeg-installer/darwin-x64": "4.1.0",
    "@ffmpeg-installer/linux-arm": "4.1.3",
    "@ffmpeg-installer/linux-arm64": "4.1.4",
    "@ffmpeg-installer/linux-ia32": "4.1.0",
    "@ffmpeg-installer/linux-x64": "4.1.0",
    "@ffmpeg-installer/win32-ia32": "4.1.0",
    "@ffmpeg-installer/win32-x64": "4.1.0",
    "@img/sharp-darwin-arm64": "^0.34.5",
    "@img/sharp-darwin-x64": "^0.34.5",
    "@img/sharp-libvips-darwin-arm64": "^1.2.4",
    "@img/sharp-libvips-darwin-x64": "^1.2.4",
    "@img/sharp-libvips-linux-arm": "^1.2.4",
    "@img/sharp-libvips-linux-arm64": "^1.2.4",
    "@img/sharp-libvips-linux-ppc64": "^1.2.4",
    "@img/sharp-libvips-linux-riscv64": "^1.2.4",
    "@img/sharp-libvips-linux-s390x": "^1.2.4",
    "@img/sharp-libvips-linux-x64": "^1.2.4",
    "@img/sharp-libvips-linuxmusl-arm64": "^1.2.4",
    "@img/sharp-libvips-linuxmusl-x64": "^1.2.4",
    "@img/sharp-linux-arm": "^0.34.5",
    "@img/sharp-linux-arm64": "^0.34.5",
    "@img/sharp-linux-ppc64": "^0.34.5",
    "@img/sharp-linux-riscv64": "^0.34.5",
    "@img/sharp-linux-s390x": "^0.34.5",
    "@img/sharp-linux-x64": "^0.34.5",
    "@img/sharp-linuxmusl-arm64": "^0.34.5",
    "@img/sharp-linuxmusl-x64": "^0.34.5",
    "@img/sharp-wasm32": "^0.34.5",
    "@img/sharp-win32-arm64": "^0.34.5",
    "@img/sharp-win32-ia32": "^0.34.5",
    "@img/sharp-win32-x64": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "@types/yargs": "^17.0.33",
    "body-parser": "^2.2.2",
    "chai": "^6.2.2",
    "depcheck": "^1.4.7",
    "esbuild": "^0.25.0",
    "express": "^5.2.1",
    "mocha": "^11.7.5",
    "semver": "^7.7.4",
    "typescript": "^5.8.0"
  }
}
